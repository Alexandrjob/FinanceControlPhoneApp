<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YunakApp.HamburgerMenu">
    <MasterDetailPage.Master>
        <ContentPage BackgroundColor="#99d9ea" Padding="0,20,0,0"  Title="Menu">
            <StackLayout>
                <Label Padding="5,0,10,0" Text="Меню"/>
                <ListView BackgroundColor="White" x:Name="ListMenu" ItemSelected="ListMenu_ItemSelected">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ImageCell TextColor="Black" DetailColor="Black" Height="25"
                                   Text="{Binding MenuTitle}">
                            </ImageCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
</MasterDetailPage>